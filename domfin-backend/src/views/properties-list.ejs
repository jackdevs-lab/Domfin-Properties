<!DOCTYPE html>
<html>
<head>
  <title>Properties List</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Properties</h1>
    <a href="/admin/properties/new" class="btn btn-success mb-3">New Property</a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Price</th>
          <th>Neighborhood</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% properties.forEach(property => { %>
          <tr>
            <td><%= property.id %></td>
            <td><%= property.title %></td>
            <td><%= property.price %></td>
            <td><%= property.neighborhood %></td>
            <td>
              <a href="/admin/properties/<%= property.id %>" class="btn btn-info btn-sm">View</a>
              <!-- Add edit/delete links later -->
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>